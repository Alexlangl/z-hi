{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "outDir": "dist",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "assets",
    "build",
    "dist",
    "indep-pkgs",
    "node_modules",
    "scripts",
    "ssr",
    "stories",
    "__test__",
    "test"
  ]
}